<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroung"
    tools:context="com.example.ahmad.hakimi.ForgetPasswordPage">


    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0" />

    <EditText
        android:id="@+id/ForgerEmailId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:alpha="0.5"
        android:background="@drawable/home_bu"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0" />

    <EditText
        android:id="@+id/ForgetOldPassId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:alpha="0.5"
        android:background="@drawable/home_bu"
        android:ems="10"
        android:hint="Old Password"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0" />

    <EditText
        android:id="@+id/ForgetNewPassId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:alpha="0.5"
        android:background="@drawable/home_bu"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0" />

    <Button
        android:id="@+id/ForgetButtonId"
        android:layout_width="match_parent"
        android:alpha="1"
        android:background="@drawable/home_bu_sign"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="ForgerBuId"
        android:text="Change" />
</LinearLayout>
