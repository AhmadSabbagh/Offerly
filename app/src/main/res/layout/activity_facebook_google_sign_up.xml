<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung"
    tools:context="com.example.ahmad.hakimi.facebook_google_sign_up">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/facephoneID"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:alpha="0.5"
            android:background="@drawable/home_bu"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/faceAgeID"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:alpha="0.5"
            android:background="@drawable/home_bu"
            android:ems="10"
            android:hint="Age"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <EditText
            android:id="@+id/faceGenderID"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:alpha="0.5"
            android:background="@drawable/home_bu"
            android:ems="10"
            android:hint="Gender"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/faceButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="faceBuClick"
            android:background="@drawable/home_bu_sign"
            android:text="Send" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
