<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroung"
    tools:context="com.example.ahmad.hakimi.ComplaintActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0" />

    <EditText
        android:id="@+id/CompEmailID"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_weight="0"
        android:background="@drawable/home_bu"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0" />

    <EditText
        android:id="@+id/CompID"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_weight="0"
        android:background="@drawable/home_bu"
        android:ems="10"
        android:hint="Enter your Complaint"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0" />

    <Button
        android:id="@+id/CompId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_bu_sign"
        android:layout_weight="0"
        android:onClick="sendComp"
        android:text="Send" />
</LinearLayout>
