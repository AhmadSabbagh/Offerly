<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.example.ahmad.hakimi.HomePage"
    android:background="@drawable/backgroung"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_weight="0">


        <Button
            android:id="@+id/resID"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:alpha="0.5"
            android:background="@drawable/home_bu"
            android:foregroundGravity="fill_vertical|center_horizontal|center"
            android:gravity="center"
            android:onClick="findResturant"
            android:text="Resturant" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/resID"
            android:layout_alignTop="@+id/resID"
            android:layout_marginStart="14dp"
            app:srcCompat="@drawable/res_logo2_android" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            app:srcCompat="@drawable/hotel_logo_android" />

        <Button
            android:id="@+id/hotelId2"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.5"
            android:background="@drawable/home_bu"
            android:foregroundGravity="fill_vertical|center_horizontal|center"
            android:onClick="findHotel"
            android:text="Hotel" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0">

        <Button
            android:id="@+id/clothesID"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0"
            android:alpha="0.5"
            android:background="@drawable/home_bu"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:onClick="findClothes"
            android:text="Clothes" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/clothesID"
            android:layout_alignParentStart="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="1dp"
            app:srcCompat="@drawable/clothes_logo_android" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0">

        <Button
            android:id="@+id/cafeID2"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.5"
            android:background="@drawable/home_bu"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:onClick="findCafees"
            android:text="Cafee" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="44dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            app:srcCompat="@drawable/cafee_logo_android" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:foregroundGravity="bottom">

        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:id="@+id/bnve"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="@drawable/color"
            android:foregroundGravity="bottom"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/menu_nav" />
    </RelativeLayout>


</LinearLayout>
